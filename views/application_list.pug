extends admin_layout
block content
	.content
		.row
			.col-md-10.mx-auto
				ul.list-group.list-group-flush
					li.list-group-item.list-group-item-primary
						.row.font-weight-bold
							.col-2.col-md-1 #
							.col-3.col-md-2 이름
							.col-7.col-md-3 연락처
							.col-12.col-md-6 남기는 말
					each item, idx in list
						li.list-group-item(class=idx%2===0?'list-group-item-secondary':'', about=item._id)
							.row
								.col-2.col-md-1 #{idx + 1}
								.col-3.col-md-2 #{item.user_name}
								.col-7.col-md-3 #{item.user_phone}
								.col-12.col-md-6
									.d-flex.justify-content-between
										span #{item.mention}
										button.btn.btn-danger.btn-sm.btn-round.m-0(onclick=`fnRemove("${item._id}")`) 삭제
block append_js
	script(src='/javascripts/admin_custom.js', type='text/javascript')
